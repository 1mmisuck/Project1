<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000">

        <!-- Хедер с кнопкой назад -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111111"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <!-- Заголовок -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подробнее"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Контейнер для заявок на ремонт -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:background="#000000">

            <!-- Заголовок заявок на ремонт с кнопкой сортировки -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#111111"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Заявки на ремонт"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true" />

                <!-- Иконка сортировки для ремонта -->
                <ImageButton
                    android:id="@+id/sort_repair_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_sort"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Сортировка заявок на ремонт по дате"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="12dp" />

            </RelativeLayout>

            <!-- Контейнер для карточек заявок на ремонт -->
            <LinearLayout
                android:id="@+id/repair_requests_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#000000" />

        </LinearLayout>

        <!-- Контейнер для заявок на покраску -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:background="#000000">

            <!-- Заголовок заявок на покраску с кнопкой сортировки -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#111111"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Заявки на покраску"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true" />

                <!-- Иконка сортировки для покраски -->
                <ImageButton
                    android:id="@+id/sort_paint_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_sort"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Сортировка заявок на покраску по дате"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="12dp" />

            </RelativeLayout>

            <!-- Контейнер для карточек заявок на покраску -->
            <LinearLayout
                android:id="@+id/paint_requests_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#000000" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>