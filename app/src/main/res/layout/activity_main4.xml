<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity4">

    <!-- Toolbar со стрелкой назад -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Покраска"
        app:titleTextColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Заголовок -->
    <TextView
        android:id="@+id/titleTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Оформление заявки на покраску"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4" />

    <!-- Поле для имени владельца -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameInputLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameEditText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя владельца"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Поле для номера телефона -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneInputLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInputLayout4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneEditText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Номер телефона"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Поле для модели автомобиля -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/carModelInputLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneInputLayout4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/carModelEditText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Модель автомобиля"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Поле для желаемого цвета покраски -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/colorInputLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carModelInputLayout4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/colorEditText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Желаемый цвет покраски"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Выбор даты -->
    <TextView
        android:id="@+id/dateLabel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Выберите дату"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorInputLayout4" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dateInputLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateLabel4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateEditText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ДД.ММ.ГГГГ"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:focusable="false"
            android:clickable="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Кнопка оформления заявки -->
    <Button
        android:id="@+id/submitButton4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#2196F3"
        android:text="Оформить заявку"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateInputLayout4" />

</androidx.constraintlayout.widget.ConstraintLayout>