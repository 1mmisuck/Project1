<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Хедер с датой и временем -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#111111"
            android:padding="12dp">

            <TextView
                android:id="@+id/header_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16.11.2024"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/header_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18:30:45"
                android:gravity="center"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Вертикальный контейнер для кнопок -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/btn_zayavki"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="РЕМОНТ"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_statistika"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="СТАТИСТИКА"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_pokraska"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="ПОКРАСКА"
                android:textAllCaps="false"
                android:textSize="18sp"/>
        </LinearLayout>

        <!-- Контейнер для заявок на ремонт -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:background="#000000">

            <!-- Заголовок заявок на ремонт -->
            <TextView
                android:id="@+id/repair_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заявки на ремонт"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:background="@drawable/card_selector"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <!-- Контейнер для карточек заявок на ремонт -->
            <LinearLayout
                android:id="@+id/repair_requests_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#000000" />

        </LinearLayout>

        <!-- Контейнер для заявок на покраску -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:background="#000000">

            <!-- Заголовок заявок на покраску -->
            <TextView
                android:id="@+id/paint_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заявки на покраску"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:background="@drawable/card_selector"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <!-- Контейнер для карточек заявок на покраску -->
            <LinearLayout
                android:id="@+id/paint_requests_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#000000" />

        </LinearLayout>

        <!-- Вотермарк -->
        <LinearLayout
            android:id="@+id/watermark_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="#333333"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Melstroy Game"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Лобачев Егор и Пятигорский Данила | ИСП271"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Секретная кнопка Сборка ПК -->
        <Button
            android:id="@+id/secret_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сборка ПК"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:background="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:padding="8dp"
            android:visibility="invisible" />

    </LinearLayout>
</ScrollView>